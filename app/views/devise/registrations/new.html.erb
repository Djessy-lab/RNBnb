<div class="container-sign-up">
  <h2>Créer un compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email" },
              label: 'Votre email'%>
      <%= f.input :first_name, label: "Votre prénom" %>
      <%= f.input :last_name, label: "Votre nom" %>
      <%= f.input :photo, as: :file, label: "Votre photo" %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: 'Mot de passe' %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label: 'Confirmer le mot de passe' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Valider" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
