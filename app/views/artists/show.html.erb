 <%= render 'shared/navbar' %>
 <div class="container">
  <div class="global-card">
    <div class="left-card">
      <div class="artist-photo">
        <%= cl_image_tag @artist.photo.key, height: 200, width: 190, crop: :fill %>
        </div>
        <div class="card-name">
          <div class="artist-name">
            <%= @artist.name %>
          </div>
          <p class="barcode">
            RNBnb
          </p>
        </div>
    </div>
    <div class="right-card">
      <div class="description">
        <p><%= @artist.description %></p>
      </div>
      <div class="category-price">
        <div class="artist-category">
          <strong><%= @artist.category %></strong>
        </div>

        <div class="card-index-text-cp">
          <p><%= @artist.price %></p>
          <i class='fa-solid fa-euro-sign'></i>
        </div>
      </div>
        <div class="booking-form">
          <%= simple_form_for [@artist, @booking] do |f| %>
          <%= f.input :date, html5: true %>
          <%= f.button :submit, "Demande de réservation", class: 'btn btn-outline-light' %>
          <% end %>
        </div>
        <div class="music">
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.3s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.4s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
        </div>
        <%  if @track_id %>
          <iframe style='border-radius:12px' src='https://open.spotify.com/embed/track/<%= @track_id %>?utm_source=generator' width='50%' height='100' frameBorder='0' autoplay clipboard-write; encrypted-media; fullscreen; picture-in-picture loading='lazy'></iframe>
        <%  else %>
          <p>Désolé</p>
        <% end %>
    </div>
  </div>
</div>
