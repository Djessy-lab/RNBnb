 <div class="container">
  <div class="global-card">
    <div class="left-card">
      <div class="artist-photo">
        <%= cl_image_tag @artist.photo.key, height: 200, width: 190, crop: :fill %>
        </div>
        <div class="card-name">
          <div class="artist-name">
            <%= @artist.name %>
          </div>
          <p class="barcode">
            RNBnb
          </p>
        </div>
    </div>
    <div class="right-card">
      <div class="description">
        <p><%= @artist.description %></p>
      </div>
      <div class="category-price">
        <div class="artist-category">
          <strong><%= @artist.category %></strong>
        </div>
        <div class="card-index-text-cp">
          <p><%= @artist.price %></p>
          <i class='fa-solid fa-euro-sign'></i>
        </div>
      </div>
        <div class="music">
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.3s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.4s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
        </div>
        <div class = "buttons-my-artist">
                  <!-- Button trigger modal -->
          <button type="button" class="btn-to-click" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Modifier cet artist
          </button>
              <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h2 class="modal-title fs-5" id="exampleModalLabel">Modifier <%= @artist.name %></h2>
                  <button class="btn-to-click-green" data-bs-dismiss="modal" aria-label="Close"><strong>X</strong></button>
                </div>
                <div class="modal-body">
                  <div class="container-edit-booking">
                    <div class="modif-resa">
                        <%= render 'form', artist: @artist %>
                    </div>
                </div>
                </div>
              </div>
            </div>
          </div>
          <p><%= link_to "Supprimer cet artist", admin_artist_path(@artist), data: { turbo_method: :delete, turbo_confirm: "Etes vous sur?" }, class: "btn-to-click"  %></p>
        </div>
      </div>
  </div>
</div>
