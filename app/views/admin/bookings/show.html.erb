<div class="container">
  <div class="global-card">
    <div class="left-card">
      <div class="artist-photo">
        <%= cl_image_tag @booking.artist.photo.key, height: 200, width: 190, crop: :fill %>
     </div>
    <div class="card-name">
      <div class="artist-name">
        <%= @booking.artist.name %>
      </div>
      <p class="barcode">
        RNBnb
      </p>
    </div>
  </div>
      <div class="right-card">
        <div class="description">
          <p><%= @booking.artist.description %></p>
        </div>
        <div class="category-price">
          <div class="artist-category">
            <strong><%= @booking.artist.category %></strong>
          </div>
          <div class="artis-price">
            <div class="card-index-text-cp">
              <p><%= @booking.artist.price %></p>
              <i class='fa-solid fa-euro-sign'></i>
            </div>
          </div>
        </div>
        <div class="booking-informations">
          <p>Numero de booking : <%= @booking.id %></p>
          <p>Date de booking : <%= l(@booking.date, format: :long) %></p>
          <p><%= @booking.validated ? "statut de votre booking : ValidÃ©" : "" %></p>
        </div>
        <div class="music">
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.3s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.4s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.5s;"></i>
          <i class="fa-solid fa-music fa-beat" style="--fa-animation-duration: 0.6s;"></i>
        </div>
        <div class = "buttons-modifs">
            <%= link_to "Valider", validate_admin_booking_path(@booking, decision: true), data: { turbo_method: :post }, class: "btn-to-click" %>
            <%= link_to "Decliner", validate_admin_booking_path(@booking, decision: false), data: { turbo_method: :post }, class: "btn-to-click" %>
        </div>
      </div>
  </div>
</div>
